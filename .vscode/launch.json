{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Electron: Main Process",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${workspaceFolder}/node_modules/@electron-forge/cli/script/vscode.sh",
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/node_modules/@electron-forge/cli/script/vscode.cmd"
      },
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "sourceMaps": true,
      "pauseForSourceMap": true,
      "outFiles": [
        "${workspaceFolder}/.vite/build/**/*.js",
        "${workspaceFolder}/.vite/build/**/*.mjs"
      ],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ]
    },
    {
      "name": "Electron: Renderer (Attach)",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "webRoot": "${workspaceFolder}/src/renderer/src",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "/@fs/*": "*",
        "/src/*": "${workspaceFolder}/src/renderer/src/*"
      },
      "timeout": 60000
    },
    {
      "name": "Electron: Renderer Only (with task)",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "webRoot": "${workspaceFolder}/src/renderer/src",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "/@fs/*": "*",
        "/src/*": "${workspaceFolder}/src/renderer/src/*"
      },
      "timeout": 60000,
      "preLaunchTask": "electron-forge: start with remote debugging"
    }
  ],
  "compounds": [
    {
      "name": "Electron: Main + Renderer",
      "configurations": [
        "Electron: Main Process"
      ],
      "stopAll": true,
      "presentation": {
        "group": "debug",
        "order": 1
      }
    }
  ]
}
