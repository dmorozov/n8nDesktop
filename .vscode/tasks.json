{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "electron-forge: start",
      "type": "npm",
      "script": "start",
      "problemMatcher": [],
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "electron-forge: start with remote debugging",
      "type": "npm",
      "script": "start:debug",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^never match this$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Compiling.*$",
          "endsPattern": "^.*Launching Electron.*|^.*webpack compiled.*$"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "electron-forge: build",
      "type": "npm",
      "script": "build",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "electron-forge: make",
      "type": "npm",
      "script": "make",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "typecheck",
      "type": "npm",
      "script": "typecheck",
      "group": "build",
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "lint",
      "type": "npm",
      "script": "lint",
      "problemMatcher": ["$eslint-stylish"]
